<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:name=".RestaurantApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Restaurantapp"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Restaurantapp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CustomerMainActivity"
            android:label="Home" />

        <activity
            android:name=".activities.StaffMainActivity"
            android:label="Home" />

        <activity
            android:name=".activities.ReservationActivity"
            android:label="Reservations" />

        <activity
            android:name=".activities.MenuActivity"
            android:label="Menu" />

        <activity android:name=".activities.CreateReservationActivity"
            android:label="Create a Reservation" />

        <activity android:name=".activities.EditReservationActivity"
            android:label="Edit a Reservation" />

        <activity android:name=".activities.ViewMenuItemActivity"
            android:label="Menu" />

        <activity android:name=".activities.EditMenuItemActivity"
            android:label="Edit menu item" />

        <activity android:name=".activities.NotificationSettingsActivity"
            android:label="Notification settings" />

        <activity
            android:name=".activities.CreateMenuItemActivity"
            android:label="Create menu item" />

        <activity
            android:name=".activities.CreateUserActivity"
            android:label="Create a user" />

    </application>

</manifest>