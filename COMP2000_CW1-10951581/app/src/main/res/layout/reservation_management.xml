<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--page title-->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Reservations"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

    <Button
        android:id="@+id/addReservationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Add reservation"
        android:textSize="10sp"/>

    <!--also hardcoded but will be dynamic in CW2-->
    <LinearLayout
        android:id="@+id/todayReservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Today's reservations"
            android:layout_marginTop="80dp"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--reservation 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <!--reservation name-->
                <TextView
                    android:id="@+id/menuItemName1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Smith"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menuItemPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Table 20"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <!--reservation time-->
                <TextView
                    android:id="@+id/menuItemPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="16:30"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <!--remove button-->
                <Button
                    android:id="@+id/editButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit" />

                <!--edit button-->
                <Button
                    android:id="@+id/removeButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--reservation 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/menuItemName1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jones"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menuItemPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Table15"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/menuItemPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="16:30"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/editButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit" />

                <Button
                    android:id="@+id/removeButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!--extra linear layout to show future reservations-->
    <LinearLayout
        android:id="@+id/futureReservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/todayReservations">

        <TextView
            android:id="@+id/laterReservationsTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Later reservations"
            android:layout_marginTop="80dp"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--reservation 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <!--name-->
                <TextView
                    android:id="@+id/menuItemName1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Smith"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!--date instead of table number as it's on a future date-->
                <TextView
                    android:id="@+id/menuItemPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="11/03"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <!--time is still relevant for future dates-->
                <TextView
                    android:id="@+id/menuItemPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="16:30"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/editButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit" />

                <Button
                    android:id="@+id/removeButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--reservation 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/menuItemName1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jones"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menuItemPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="11/03"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/menuItemPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="16:30"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/editButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit" />

                <Button
                    android:id="@+id/removeButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>